        </div><!-- /.col-lg-4 -->
    </div><!-- /.row -->

    <div class="row">
        @foreach (var medicament in Model)
        {
            <div class="col-md-3 col-sm-4">
                <div class="thumbnail">
                    <img src="@medicament.Photo" alt="computer man" style="width:250px;height:200px">
                    <h5>@medicament.Designation</h5>
                </div>
            </div>
        }
    </div>

