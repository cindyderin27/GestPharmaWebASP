    <h1>Sign In </h1>
    <div class="clear-loading spinner">
        <span></span>
    </div>
    <div class="w3ls-login box box--big">
        <!-- form starts here -->
        <form method="post" action="@Url.Action("Login","Account")">
            @if (Model != null && Model.IsError)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message;

                </div>
            }

            <div class="agile-field-txt">
                <label><i class="fa fa-user" aria-hidden="true"></i>Email</label>
                @*<div id=" @Html.DisplayFor(x => x.Firstname)">*@
                <input type="text" name="email" placeholder="Enter email"
                       value="@(Model !=null? Model.Email:"" )" />
                @*@Html.ValidationMessageFor(x => x.Firstname, null, new { @class = "small" })
                    </div>*@
            </div>

            <div class="agile-field-txt">
                <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Password </label>
                <div id=" @Html.DisplayFor(x => x.Password)">
                    <input type="password" name="password" placeholder="Enter Password" id="myInput" />
                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = " small" })
                </div>

                <div class="agile_label">
                    <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                    <label class="check" for="check3">showpassword?</label>
                </div>
                <div class="agile-right">
                    <a href="@Url.Action("ForgotPassword","Account")">forgotpassword?</a>
                </div>
                <div class="agile-right">
                    <a href="~/Views/Account/Register.cshtml">create account</a>
                </div>
            </div>
            <!-- script for show password -->
            <script>
                function myFunction() {
                    var x = document.getElementById("myInput");
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }
                }
            </script>
            <!-- //end script -->
            <input type="submit" value="LOGIN">
        </form>
    </div>
