@model IEnumerable<GestPharmaWebASP.Models.Medicament>
@{
    ViewBag.Title = "Liste de médicaments";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
  
</head>
<body>
    <div class="container">
        <a class="btn btn-success" href="@Url.Action("Create")">
            Ajouter
        </a>
        <form style="border: 1px;">
            <Table border="1" id="cart" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            Photo
                        </th>
                        <th>
                            Reference
                        </th>
                        <th>
                            Désignation
                        </th>
                        <th>
                            Quantité
                        </th>
                        <th>
                            Prix
                        </th>
                        <th>
                            Date de Fabrication
                        </th>
                        <th>
                            Categorie
                        </th>

                        <th>
                            Actions
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var p in Model)
                        {
                    <tr>
                        <td data-th="Image">
                            <img src="@p.Photo" style="height:50px" class="img-fluid" />
                        </td>
                        <td data-th="Reference">
                            @p.ReferenceMedicament
                        </td>

                        <td data-th="Designation">
                            @p.Designation
                        </td>

                        <td data-th="QuantiteStock">
                            @p.QuantiteStock.ToString("N0")
                        </td>

                        <td data-th="Prix">
                            @p.Prix.ToString("N0")
                        </td>
                        <td data-th="Date de Fabrication">
                            @p.DateFabrication
                        </td>
                        <td data-th="Date creation">
                            @p.Categorie.NomCategorie
                        </td>

                        <td>
                            <a href="@Url.Action("Edit", new { id = p.IdMedicament })" class="text-primary">
                                Edit
                            </a>
                            <a href="@Url.Action("Delete", new { id = p.IdMedicament })" class="text-danger">
                                Delete
                            </a>

                        </td>
                    </tr>

                        }
                    }

                </tbody>
            </Table>
        </form>
    </div>
</body>
</html>



